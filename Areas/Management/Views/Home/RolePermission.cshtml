@model PurityERP.Areas.Management.ViewModel.MenuVM
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <div class="card card-primary mt-5">
        <div class="card-header">
            <h3 class="card-title">Unit Create</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form asp-action="RolePermission">
            <div class="card-body">

                <div class="form-group">
                    <label asp-for="SubMenuID" class="control-label">Submenu Name</label>
                    <div class=" input-group">
                        <select class="form-control select2" data-native-menu="false" id="inventory" asp-for="SubMenuID" asp-items="@(new SelectList(ViewBag.submenu, "SubMenuID","SubManuName"))">
                            <option disabled selected="selected">Select One</option>
                        </select>
                        @**@
                    </div>
                    <span asp-validation-for="SubMenuID" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="UserID" class="control-label">User</label>
                    <div class=" input-group">
                        <select class="form-control select2" data-native-menu="false" id="inventory" asp-for="UserID" asp-items="@(new SelectList(ViewBag.user, "UserID","UserName"))">
                            <option disabled selected="selected">Select One</option>
                        </select>
                        @**@
                    </div>
                    <span asp-validation-for="UserID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserTypeID" class="control-label">User Type</label>
                    <div class=" input-group">
                        <select class="form-control select2" data-native-menu="false" id="inventory" asp-for="UserTypeID" asp-items="@(new SelectList(ViewBag.usertype, "UserTypeID","UserTypeName"))">
                            <option disabled selected="selected">Select One</option>
                        </select>
                        @**@
                    </div>
                    <span asp-validation-for="UserTypeID" class="text-danger"></span>
                </div>

            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</body>
</html>