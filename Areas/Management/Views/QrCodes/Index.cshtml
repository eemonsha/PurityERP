        });
        $('#invqr').click(function () {

            
            var host = window.origin;//publish
            //var host = "https://localhost:44326";
            window.open(host + '/Reports/Rep/QRPurity?&St=Inventory', '_blank');//publish
            //window.open(host + '/Rep/QRPurity?&St=Inventory', '_blank');
        });

    </script>

