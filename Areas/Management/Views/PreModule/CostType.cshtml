
@model PurityERP.Areas.Management.Models.Costtype
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <div class="card card-primary mt-5">
        <div class="card-header">
            <h3 class="card-title">Cost-Type Create</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form asp-action="CostType">
            <div class="card-body">
                <div class="form-group">
                    <label for="exampleInputPassword1">Cost Tittle</label>
                    <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Cost Tittle" asp-for="Costtittle">
                </div>
                <div class="form-group">
                    <label for="costs">Operation Type</label>
                    <select class="form-control select2" data-native-menu="false" id="costs" asp-for="CostMapId" asp-items="@(new SelectList(ViewBag.costmape,"CostMapId","OperationType"))">
                        <option disabled selected="selected">Select One</option>
                    </select>
                </div>
            </div>
            
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</body>
</html>

