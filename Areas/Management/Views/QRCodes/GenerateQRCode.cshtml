@*@{
    ViewData["Title"] = "Generate QR";
}*@

<h4>Generate QR Codes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GenerateQRCode">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Product</label>@*asp-for="BankName"*@
                <select class="form-control" id="inv" asp-items="@(new SelectList(ViewBag.product, "Id","ProductTittle","ProductCode"))" name="id">
                    <option selected>Select One </option>
                </select>
                <span class="text-danger"></span>@*asp-validation-for="BankName"*@
            </div>
            <div class="form-group">
                <label class="control-label">Print Qantity</label>@*asp-for="BankName"*@
                <input class="form-control" name="number" />@*asp-for="BankName"*@
                <span class="text-danger"></span>@*asp-validation-for="BankName"*@
            </div>
            <div class="form-group">
                <input type="submit" value="Generate" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
    <script>

        $(document).ready(function () {
            $('#inv').select2();
        });
    </script>
}

