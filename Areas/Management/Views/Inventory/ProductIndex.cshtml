@model IEnumerable<PurityERP.Areas.Management.Models.Product>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <link rel="stylesheet" href="~/assets/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/assets/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/assets/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
</head>
<body>

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Exitst Product</h3>
        </div>
        <a asp-action="Productcreate" class=" btn btn-primary float-right">Create New</a>
        <!-- /.card-header -->
        <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>

                        <th>Product Tittle</th>
                        <th>Sales price</th>


                    </tr>
                </thead>
                <tbody>
                    @foreach (var items in Model)
                    {
                    <tr>

                        <td>@items.ProductTittle</td>
                        <td>@items.SalesPrice</td>
                        <td class="float-right">
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a asp-action="EditProduct" asp-route-id="@items.Id" type="button" class="btn btn-warning">Edit</a>
                                <a asp-action="ProductDetails" asp-route-id="@items.Id" type="button" class="btn btn-info">Details</a>
                                <a asp-action="ProductManage" asp-route-id="@items.Id" type="button" class="btn btn-info">Manage</a>

                            </div>


                        </td>
                    </tr>
                    }

                </tbody>
                <tfoot>
                    <tr>

                        <th>Product Tittle</th>
                        <th>Sales price</th>
                    </tr>
                </tfoot>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
</body>
</html>

